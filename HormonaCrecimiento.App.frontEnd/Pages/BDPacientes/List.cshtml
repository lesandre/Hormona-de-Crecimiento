@page
@model HormonaCrecimiento.App.Pages_BDPacientes.ListModel
@{
}
<h2 class="text-white text-center">Lista Pacientes</h2>
<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombres</th>
      <th scope="col">Apellidos</th>
      <th scope="col">Número Teléfono</th>
      <th scope="col">Género</th>
      <th scope="col"><a asp-page="./Create"><span class="material-icons">person_add</span></a> </th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  @foreach (var paciente in Model.pacientes)
  {
    <tbody>
      <tr>
        <th scope="row">@paciente.Id</th>
        <td>@paciente.Nombres</td>
        <td>@paciente.Apellidos</td>
        <td>@paciente.NumeroTelefono</td>
        <td>@paciente.Genero</td>

        <td><a asp-page="./Details" asp-route-Id="@paciente.Id"><span class="material-icons">description</span></a></td>
        <td><a asp-page="./Edit" asp-route-Id="@paciente.Id"><span class="material-icons">edit</span></a></td>
        <td><a asp-page="./Delete" asp-route-Id="@paciente.Id"><span class="material-icons">delete</span></a></td>
        <td><a asp-page="./AsignarMedico" asp-route-Id="@paciente.Id"><span class="material-icons">medical_services</span></a></td>
        <td><a asp-page="./AddPatron" asp-route-Id="@paciente.Id"><span class="material-icons">child_care</span></a></td>
      </tr>

    </tbody>
  }
</table>
