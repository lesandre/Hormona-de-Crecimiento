@page
@model HospiEnCasav2.App.Pages_BDMedicos.ListPacientesModel
@{
}
<h2 class="text-white text-center">Patrones de Crecimiento</h2>
<form method="get">
  <div class="from-group">
    <p class="text-white">
      Id Medico:<input type="text" name="GetFilters" asp-for"GetFilters">
      <input type="submit" value="Filter" />
    </p>
  </div>
</form>
<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombres</th>
      <th scope="col">Apellidos</th>
      <th scope="col">Número Teléfono</th>
      <th scope="col">Género</th>
      <th scope="col">Patrón</th>
      <th scope="col">Opciones</th>
    </tr>
  </thead>
  @foreach (var paciente in Model.pacientes)
  {
    <tbody>
      <tr>
        <th scope="row">@paciente.Id</th>
        <td>@paciente.Nombres</td>
        <td>@paciente.Apellidos</td>
        <td>@paciente.NumeroTelefono</td>
        <td>@paciente.Genero</td>
        <td>@paciente.PatronesCrecimiento</td>
        <td><a asp-page="./ListPatron" asp-route-Id="@paciente.Id"><span class="material-icons">description</span></a></td>
      </tr>
      

    </tbody>
  }
</table>
